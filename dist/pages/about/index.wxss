page {
  background: papayawhip;
}

.page-wrapper {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
  height: 100vh;
}

.header-wrapper {
  height: 60rpx;
  background: #fff;
}

.content-wrapper {
  font-size: 12Px;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
  overflow-y: scroll;
  margin: 20Px;
  padding: 10Px 20Px;
  border-radius: 20Px;
  -webkit-box-shadow: 0 8rpx 12rpx #ebedf0;
          box-shadow: 0 8rpx 12rpx #ebedf0;
  background: #fff;
}

.content-wrapper .card-wrapper .word-name {
  font-size: 20Px;
  font-weight: bold;
  margin-bottom: 12Px;
  display: block;
}

.content-wrapper .card-wrapper .pronounce-box {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin-bottom: 12Px;
}

.content-wrapper .card-wrapper .pronounce-box .item {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  font-size: 12PX;
}

.content-wrapper .card-wrapper .pronounce-box .item:first-child {
  margin-right: 12PX;
}

.content-wrapper .card-wrapper .pronounce-box .item .van-icon {
  margin-right: 4PX;
}

.content-wrapper .card-wrapper .pronounce-box .item .ph-item {
  margin-left: 4PX;
}

.content-wrapper .card-wrapper .mean-box .item {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}

.content-wrapper .card-wrapper .mean-box .item .mean-part {
  color: #9E9E9E;
  margin-right: 10Px;
}

.content-wrapper .card-wrapper .exchange-box .item .label {
  margin-right: 8Px;
}

.content-wrapper .card-wrapper .exchange-box .item .exchange {
  font-weight: bold;
}

.footer-wrapper {
  height: 80rpx;
  text-align: center;
}
