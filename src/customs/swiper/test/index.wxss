.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.settings {
  display: flex;
  width: 80%;
  align-items: center;
  z-index: 1000;
}

.setting {
  flex: 1;
}

.btn-area {
  display: flex;
  align-items: center;
  height: 60rpx;
}

.card-swipe {
  width: 100%;
  height: 900rpx;
}

.rm-card {
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
  background-color: #f08080;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  border-radius: 50%;
  margin-left: 10rpx;
  font-size: 18rpx;
}

.disable {
  background-color: #f3f3f3;
  color: #000000;
  pointer-events: none;
}

.label {
  white-space: nowrap;
  color: #666666;
}

.success {
  color: #07c160;
}

.danger {
  color: #f08080;
}
